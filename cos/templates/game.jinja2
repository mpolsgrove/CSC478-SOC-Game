<!DOCTYPE html>
<html lang="{{request.locale_name}}">
  <head>
      <!-- Bootstrap core CSS -->
      <link href="//oss.maxcdn.com/libs/twitter-bootstrap/3.0.3/css/bootstrap.min.css" rel="stylesheet">

      <!-- Custom styles for this scaffold -->
      <link href="{{request.static_url('cos:static/sandstone.css')}}" rel="stylesheet">
      <link href="{{request.static_url('cos:static/modal.css')}}" rel="stylesheet">

      <script type="text/javascript" src="{{request.static_url('cos:static/jquery-3.2.0.min.js')}}"></script>
      <script type="text/javascript" src="{{request.static_url('cos:static/konva.min.js')}}"></script>
      <script type="text/javascript" src="{{request.static_url('cos:static/board_builder.js')}}"></script>
      <script type="text/javascript" src="{{request.static_url('cos:static/stats.js')}}"></script>
      <script type="text/javascript" src="{{request.static_url('cos:static/player_join.js')}}"></script>
      <script type="text/javascript" src="{{request.static_url('cos:static/landing_page_api_calls.js')}}"></script>
  </head>
  <body>
    <h1>Catan Board: Game_ID = {{project}}</h1>
    <!-- Stores the game ID for reference later -->
    <div id="game_id" hidden>{{project}}</div>
    <div id = "container"></div>
    <script>build_board()</script>


    <!-- Game stats tables -->
    <h3 id = "score"></h3>
    <script>display_score()</script>
    <span id = "resources"></span>
    <script>display_resources()</script>
    <span id = "players"></span>
    <script>display_players()</script>
    <span id = "devcards"></span>
    <script>display_devcards()</script>
    <span id = "road_and_army"></span>
    <script>display_road_and_army()</script>


    <!-- New Game Modal -->
    <div id="newGame" class="modal">
        <!-- Modal content -->
        <div class="modal-content">
            <div class="modal-header">
                <h3 style="bold" align="center">Enter Player to Join Game</h3>
            </div>
            <div class="col-md-12">
                <div class="modal-body">
                    <form id="joinForm" name="joinForm" action="">
                        <label><b>Player name</b></label><br>
                        <input id="player_name" type="text" placeholder="your name" name="player_name" required><br>
                        <label><b>Age</b></label><br>
                        <input id="player_age" type="number" min="5" max="120" placeholder="99" name="player_age" required>


                    </form>
                    <div class="modal-footer">
                        <button id="startGameBtn" type="button" class="startbtn" value="Start Game!" required />
                        </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Prompt for player join -->
    <div id="player_join_modal"></div>
    <script>player_join()</script>

  </body>
</html>