<!DOCTYPE html>
<html lang="{{request.locale_name}}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="pyramid web application">
    <meta name="author" content="Pylons Project">
    <link rel="shortcut icon" href="{{request.static_url('cos:static/pyramid-16x16.png')}}">
    <title>Settlers of Catan: Landing Page!</title>

    <!-- Bootstrap core CSS -->
    <link href="//oss.maxcdn.com/libs/twitter-bootstrap/3.0.3/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this scaffold -->
    <link href="{{request.static_url('cos:static/theme.css')}}" rel="stylesheet">

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="//oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="//oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script type="text/javascript" src="{{request.static_url('cos:static/modal.js')}}"></script>
    <script type="text/javascript" src="{{request.static_url('cos:static/landing_page_api_calls.js')}}"></script>
    <script type="text/javascript" src="{{request.static_url('cos:static/player_join.js')}}"></script>
  </head>

  <body>
    <div class="starter-template">
        <div class="container">
            <div class="row">
                <h1>{{project}}</h1>
            </div>
        <div class="row">
            <div class="row">
              <div class="col-md-6">
                {{ "Network multiplayer turn based strategy game." }}
                <p>3-4 Players required</p>
                <!-- Trigger/Open The Modal -->
                  <button id="newGameBtn">Start New Game</button><br><br>
                  <label>Game Rules:</label><br>
                  <p>Strategically place your settlement and gain resources on any dice roll.</p>
                  <p>Trade resources for others you do not have to build new settlements.</p>
                  <p>First player to reach 10 settlements placed, wins!</p>
              </div>
            </div>
            <div class="row">
              <div class="links">
                <ul>
                  <li><i class="glyphicon glyphicon-cog icon-muted"></i><a href="https://github.com/nadcock/CSC478-SOC-Game">Github Project</a></li>
                </ul>
              </div>
            </div>
            <div class="row">
              <div class="copyright">
                UIS CSC 478 Class of 17' Project
              </div>
            </div>
        </div>
        </div>
    </div>
    <!-- New Game Modal -->
    <div id="newGame" class="modal">
        <!-- Modal content -->
        <div class="modal-content">
            <div class="modal-header">
                <span class="close">&times;</span>
                <h3 style="bold" align="center">Start a new game</h3>
            </div>
            <div class="col-md-12">
                <div class="modal-body">
                    <form id="startGameForm" name="startGameForm" action="">
                        <label><b>Game name</b></label><br>
                        <input type="text" placeholder="my game" name="game_name" autofocus required><br>
                    </form>
                    <div class="modal-footer">
                        <input id="startNewGameModalBtn" type="button" class="btn" value="Start Game!">
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="//oss.maxcdn.com/libs/jquery/1.10.2/jquery.min.js"></script>
    <script src="//oss.maxcdn.com/libs/twitter-bootstrap/3.0.3/js/bootstrap.min.js"></script>
  </body>
</html>